<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.subscribe.SubscribeDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.subscribe.Subscribe">
		SELECT * FROM subscribe WHERE subscribe_id=#{subscribeId}
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.subscribe.Subscribe">
		SELECT *
		FROM subscribe 
		WHERE subscribe_id=#{subscribeId}
	</select>

	<insert id="insert">
		INSERT
		INTO subscribe(user_id, users_id)
		VALUES(#{userId}, #{usersId})
	</insert>

    <update id="update">
          UPDATE surbscribe
		  SET 
		  user_id = #{userId},
		  users_id = #{usersId}
    </update>

	<delete id="delete">
		DELETE FROM subscribe WHERE subscribe_id = #{subscribeId}
	</delete>


    <select id="findByUserIdAndUsersId" resultType="Integer">
        SELECT subscribe_Id
    	FROM subscribe
    	WHERE user_id = #{userId} and users_id = #{usersId}
    </select>

    <select id="findByUserId" resultType="site.metacoding.firstapp.domain.subscribe.Subscribe">
          SELECT * FROM subscribe WHERE user_id=#{userId}
    </select>

	<select id="findByUserList"  resultType="site.metacoding.firstapp.web.dto.response.subscribe.UserListDto">
       SELECT s.subscribe_id, s.user_id, (u.user_id)usersId, u.username, u.nickname
		FROM subscribe s
		INNER JOIN user u
		ON u.user_id = s.users_id
		WHERE s.user_id=#{userId}
    </select>
	
	<select id="findAllSubscribePost" resultType="site.metacoding.firstapp.web.dto.response.subscribe.PostListDto">
    	SELECT p.post_title,s.users_id,s.subscribe_id, p.post_content, p.post_thumnail, p.created_at, p.updated_at, u.nickname 
		FROM (SELECT * FROM subscribe WHERE user_id=#{userId}) s
		INNER JOIN post p
		on p.user_id = s.users_id
		INNER JOIN user u
		ON p.user_id = u.user_id
		ORDER BY p.post_id DESC
    </select>

	
</mapper>



