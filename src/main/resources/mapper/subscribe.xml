<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.subscribe.SubscribeDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.subscribe.Subscribe">
		SELECT * FROM subscribe WHERE subscribe_id=#{subscribeId}
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.subscribe.Subscribe">
		SELECT *
		FROM subscribe 
		WHERE subscribe_id=#{subscribeId}
	</select>

	<insert id="insert">
		INSERT
		INTO subscribe(subscribe_id, user_id, updated_at, created_at)
		VALUES(#{subscribeId}, #{userId}, now(), now())
	</insert>

    <update id="update">
          UPDATE surbscribe
		  SET subscribe_id = #{subscribeId},
		  user_id = #{userId}
    </update>

	<delete id="delete">
		DELETE FROM subscribe WHERE subscribe_id = #{subscribeId}
	</delete>

</mapper>



